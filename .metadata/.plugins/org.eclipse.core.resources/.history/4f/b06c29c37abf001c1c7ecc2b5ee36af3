
public class Vv3 {

	public static void main(String[] args) {
		int sum=0; //ÃÑÁ¡
		float average=0f;//Æò±Õ
		//Á¡¼ö ¹è¿­
		int[]score= {100,88,100,100,90};
		//i°¡ 0ÀÌ°í i°¡ 
