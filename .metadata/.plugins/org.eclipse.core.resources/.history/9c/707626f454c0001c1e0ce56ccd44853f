import java.util.*;
public class Ex2 {
	public static void main(String[] args) {
		int sum = 0; //합계저장변수
		float ave = 0;
		//초기화 i는 1 조건식 i가 10보다 작거나 크면 실행 
		//sum값에 i값을 더해라
		for(int i=1; i <= 100; i++) {
			sum+=i;
		}
			System.out.println(sum);
			ave =(float)sum/100;
		System.out.println(ave);
		
		int sum2 = 0;
		int count = 0;
		for(int num =8; num<=100; num++) {
			if(num%2==0 && num%7==0) {
				count++;
				sum2+=num;
				int[] num2 = {num};
				System.out.printf("배수"+num);
				System.out.println("");
				System.out.println(Arrays.toString(num2));
				}
		}
		System.out.println("합계 :" + sum2);
		System.out.println("개수 :" + count);
		
}

	}


